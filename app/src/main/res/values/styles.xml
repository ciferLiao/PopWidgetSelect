<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="pop_bottom_anim">

        <item name="android:windowEnterAnimation">@anim/pop_bottom_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_bottom_out</item>
    </style>


    <declare-styleable name="FullScreenView">
        <attr name="HeightRatio" format="reference|float" />
        <attr name="MaxHeight" format="reference|dimension" />
    </declare-styleable>
</resources>
